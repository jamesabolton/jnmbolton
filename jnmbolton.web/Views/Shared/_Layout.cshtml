@using jnmbolton.web.core.Infrastructure;
<!DOCTYPE html>
<html lang="en">
<head>
	<meta http-equiv="content-type" content="text/html; charset=UTF-8">
	<title>@ViewBag.Title - My ASP.NET MVC Application</title>
	<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<!-- Google fonts -->
	<link href='http://fonts.googleapis.com/css?family=Dosis:600,500|Open+Sans:400,600,300,700,400italic' rel='stylesheet' type='text/css'>

	@Styles.Render("~/bundles/main/css")

	<!--[if IE]>
		<link rel="stylesheet" href="/Content/Common/ie.css">
	<![endif]-->

	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<script>!window.jQuery && document.write('<script src="js/html5.js"><\/script>')</script>
		<link rel="stylesheet" type="text/css" href="/Content/Common/ie8.css">
	<![endif]-->

	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

	@Scripts.Render("~/bundles/main/js")
</head>

<body>
	<div id="wrapper">
		<!-- Container -->
		<!-- Top -->
		<header>
			<div class="container">
				<div class="titles">
					<h2>Website, server, client developer, and Siberian Husky rescuer</h2>
					<h3>Freelance</h3>
				</div>
				<h1><a href="/">James <span>Bolton</span></a></h1>
			</div>
		</header>
		<!-- /Top -->
		<!-- Content -->
		<section>
			<div class="container">
				<nav id="nav">
					<ul class="shadow">
						<li>
							@Ajax.MenuAjaxActionLink("Profile", "About me", "Index", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "content", OnBegin="navLoadBegin()", OnComplete="navLoadComplete()", OnSuccess="navLoadSuccess()" }, null)
						</li>
						<li>
							@Ajax.MenuAjaxActionLink("Resume", "Experience", "Resume", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "content", OnBegin="navLoadBegin()", OnComplete="navLoadComplete()", OnSuccess="navLoadSuccess()" }, null)
						</li>
						<li>
							@Ajax.MenuAjaxActionLink("Portfolio", "My Works", "Portfolio", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "content", OnBegin="navLoadBegin()", OnComplete="navLoadComplete()", OnSuccess="navLoadSuccess()" }, null)
						</li>
						<li>
							@Ajax.MenuAjaxActionLink("Contact", "Get in touch", "Contact", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "content", OnBegin="navLoadBegin()", OnComplete="navLoadComplete()", OnSuccess="navLoadSuccess()" }, null)
						</li>
					</ul>
				</nav>
				<div id="content">
					@RenderBody()
				</div>
			</div>
		</section>
		<!-- /Content -->
		<!-- Footer -->
		<footer>
			<div class="container">
				<div id="twitter" class="twttplug clearfix">Loading... </div>
			</div>
		</footer>
		<!-- /Footer -->
		<!-- /Container -->
	</div>
</body>
</html>
